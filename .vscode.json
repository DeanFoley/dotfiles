{
  /* CORE */
  // Editor
  "editor.fontFamily": "Monaspace Argon, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.fontWeight": "500",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.wordWrap": "on",
  "editor.guides.bracketPairs": true,

  // Explorer
  "explorer.confirmDelete": false,

  // Extensions
  "extensions.ignoreRecommendations": true,

  // Search
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Telemetry
  "telemetry.telemetryLevel": "off",

  // Terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "'RecMonoCasualNFM'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.osx": "tmux-shell",
  "terminal.integrated.profiles.osx": {
    "tmux-shell": {
      "path": "tmux",
      "args": [
        "new-session",
        "-A",
        "-s",
        "${workspaceFolderBasename}-dev"
      ]
    }
  },

  // Update
  "update.showReleaseNotes": false,

  // Window
  "window.autoDetectHighContrast": false,
  "window.autoDetectColorScheme": true,

  // Workbench
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Allogenes",
  "workbench.fontAliasing": "antialiased",
  "workbench.preferredLightColorTheme": "Allogenes",
  "workbench.preferredDarkColorTheme": "Serika Dark",
  "workbench.preferredHighContrastColorTheme": "Allogenes",
  "workbench.preferredHighContrastLightColorTheme": "Serika Dark",
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",

  // filetype-specific settings
  "[go]": {
    "editor.fontFamily": "'GoMono Nerd Font Mono', monospace"
  },
  "[mdx]": {
    "editor.inlineSuggest.enabled": false,
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* EXTENSIONS */
  // Docker 
  "docker-explorer.enableTelemetry": false,

  // Font Randomizer
  "fontRandomizer.fontList": [
    "Monaspace Neon",
    "Monaspace Argon",
    "Monaspace Krypton",
    "Monaspace Xenon"
  ],
  "fontRandomizer.activateOnStartup": true,
  "fontRandomizer.autoRefresh": "Every day",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,

  // GitLens
  "gitlens.plusFeatures.enabled": false,
  "gitlens.rebaseEditor.ordering": "asc",
  "gitlens.telemetry.enabled": false,
  "gitlens.views.branches.branches.layout": "list",
  "gitlens.views.commits.avatars": false,

  // Go settings
  // these should probably be workspace-specific where relevant tbh
  "go.delveConfig": {
    "debugAdapter": "dlv-dap",
  },
  "go.toolsEnvVars": {},
  "go.toolsManagement.autoUpdate": true,

  // Indent Rainbow
  "indentRainbow.colorOnWhiteSpaceOnly": true,
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 5,

  // TypeScript
  // should be workspace-specific where relevant
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  
  // TODO Highlight
  "todohighlight.isEnable": true,
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.css",
    "**/*.scss",
    "**/*.php",
    "**/*.rb",
    "**/*.txt",
    "**/*.mdown",
    "**/*.md",
    "**/*.go"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "window.systemColorTheme": "auto",
}