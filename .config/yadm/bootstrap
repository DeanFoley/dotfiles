#!/bin/bash

chsh -s $(which zsh)

system_type=$(uname -s)

# Mac-specific configuration
if [ "$system_type" = "Darwin" ]; then
  ~/.macos
fi

if [ -f "$HOME/.zshenv.local" ]; then 
  cat .zshenv.local >> .zshenv
  rm .zshenv.local
fi

# Oh My Zsh
if [ ! -d "$HOME/.oh-my-zsh" ]; then
  ZSH= sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
  mkdir $ZSH_CUSTOM/plugins
  mkdir $ZSH_CUSTOM/themes

  # Delete auto-generated .zshrc file and restore my proper, beautiful one
  rm .zshrc && mv .zshrc.pre-oh-my-zsh .zshrc

  # OMZ plugins
  if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/spaceship" ]; then 
    git clone --depth=1 https://github.com/spaceship-prompt/spaceship-prompt.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/spaceship
    ln -s "$ZSH_CUSTOM/themes/spaceship-prompt/spaceship.zsh-theme" "$ZSH_CUSTOM/themes/spaceship.zsh-theme"
  fi

  if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/you-should-use" ]; then
    git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/you-should-use
  fi

  if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions" ]; then
    git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
  fi

  if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/fast-syntax-highlighting" ]; then
    git clone https://github.com/zdharma-continuum/fast-syntax-highlighting.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/fast-syntax-highlighting
  fi

  # Disabling this for now; not sure if we're a fan of it or not
  # if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autocomplete" ]; then
  #   git clone https://github.com/marlonrichert/zsh-autocomplete.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autocomplete
  # fi

  if [ ! -d "${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-bat" ]; then
    git clone https://github.com/fdellwing/zsh-bat.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-bat
  fi

  source ~/.zshrc
fi

# Tmux configuration & plugin installation
tmux source-file ~/.tmux.conf

if [ ! -d "$HOME/.tmux/plugins/tpm" ]; then
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm && ~/.tmux/plugins/tpm/bin/install_plugins
fi

# Asdf third-party plugins
if [ ! -d "$HOME/.asdf/plugins/golang" ]; then
  asdf plugin add golang ssh://git@github.com/asdf-community/asdf-golang.git
fi

if [ ! -d "$HOME/.asdf/plugins/rust" ]; then
  asdf plugin add rust ssh://git@github.com/code-lever/asdf-rust.git
fi

echo "Bootstrap completed!"